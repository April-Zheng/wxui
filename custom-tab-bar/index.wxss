/* components/custom-tab-bar/index.wxss */

.tab-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 96rpx;
    background: white;
    display: flex;
    padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-border {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 2rpx;
    transform: scaleY(0.5);
    background: #EFEFF4;
}

.tab-bar-item {
    flex: 1;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    padding-top: 16rpx;
}

.tab-bar-item .cover-image {
    width: 40rpx;
    height: 40rpx;
}

.tab-bar-item cover-view,
.tab-bar-item view {
    font-size: 10px;
    padding-top: 10rpx;
}

.menu_scan {
    flex: 1;
    width: 120rpx !important;
    height: 120rpx !important;
    position: fixed;
    /* position: absolute; */
    bottom: 20rpx;
    border-radius: 50%;
}