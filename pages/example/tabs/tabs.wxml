<view class="container">
  <view class="title">horizontal</view>
  <v-tabs tabs="{{tabs}}" border slider bind:click="tabClick">
    <view class="tab__content">
      <view hidden="{{activeIndex != 0}}">tabs1的内容</view>
      <view hidden="{{activeIndex != 1}}">tabs2的内容</view>
      <view hidden="{{activeIndex != 2}}">tabs3的内容</view>
    </view>
  </v-tabs>
  <view class="title">horizontal scrollable</view>
  <v-tabs scrollable slider tabs="{{tabs2}}" bind:click="tabClick2">
    <view class="tab__content">
      <view hidden="{{activeIndex2 != 0}}">tabs1的内容</view>
      <view hidden="{{activeIndex2 != 1}}">tabs2的内容</view>
