      <view hidden="{{activeIndex2 != 8}}">tabs9的内容</view>
      <view hidden="{{activeIndex2 != 9}}">tabs10的内容</view>
    </view>
  </v-tabs>
  <view class="title">vertical</view>
  <v-tabs tabs="{{tabs}}" direction="vertical" bind:click="tabClick">
    <view class="tab__content">
      <view hidden="{{activeIndex != 0}}">tabs1的内容</view>
      <view hidden="{{activeIndex != 1}}">tabs2的内容</view>
      <view hidden="{{activeIndex != 2}}">tabs3的内容</view>
    </view>
  </v-tabs>
  <view class="title">vertical scrollable</view>
  <v-tabs scrollable border direction="vertical" slider tabs="{{tabs2}}" bind:click="tabClick2">
    <view class="tab__content">
      <view hidden="{{activeIndex2 != 0}}">tabs1的内容</view>
