/* components/rate/rate.wxss */

.v-rate {
    background-color: #fff;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    min-height: 60rpx;
    padding: 16rpx 10rpx;
}

.v-rate-item {
    width: 40rpx;
    height: 40rpx;
    padding-right: 10rpx;
}

.v-rate-icon {
    width: 40rpx;
    height: 40rpx;
}

.v-rate-text {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 15px;
}