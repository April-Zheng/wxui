/* components/toast/toast.wxss */

.v-toast-container {
    position: fixed;
    height: 100%;
    width: 100%;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 999
}

.v-toast-container_center {
    justify-content: center;
}

.v-toast-mask {
    height: 100%;
    width: 100%;
    background: rgba(0, 0, 0, .4);
    position: absolute;
    top: 0;
    left: 0
}

.v-toast {
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    max-width: 400rpx;
    min-height: 88rpx;
    background: rgba(0, 0, 0, .7);
    border-radius: 12rpx;
    color: #fff;
    font-size: 28rpx;
    line-height: 40rpx;
    box-sizing: border-box;
    padding: 20rpx 40rpx;
    z-index: 999
}

.v-toast_top {
    top: 20rpx;
}

.v-toast_bottom {
    bottom: 20rpx;
}

.v-toast_top,
.v-toast_bottom {
    flex-direction: row;
}

.v-toast_center {
    flex-direction: column;
}

.v-toast-icon {
    width: 40rpx;
    height: 40rpx;
    padding: 10rpx;
}

.v-toast-text {
    text-align: center;
}