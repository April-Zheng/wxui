/* components/input/input.wxss */

.v-input {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    height: 2.58823529em;
    min-height: 2.58823529em;
    /* line-height: 2.58823529em; */
    background-color: #fff;
}

.v-input-label {
    flex: 0.3;
    text-align: center;
    word-wrap: break-word;
    word-break: break-all;
}

.v-input-required::before {
    content: "*";
    color: #FF4A4A;
}

.v-input-value_container {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    flex:1;
    margin-right: 10rpx;
}

.v-input-value_container_border{
   border: 1px solid rgba(204, 204, 204, 1);
}

.v-input-value {
    flex: 1;
    padding:10rpx;
}



.v-input-icon {
    flex: 0.1;
    padding: 10rpx;
}