/* components/searchbar/searchbar.wxss */

.v-search-bar {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 68rpx;
    padding: 12rpx 20rpx;
    box-sizing: border-box;
    background-color: #FFFFFF;
    font-size: 14px;
}

.v-search-form {
    display: flex;
    align-items: center;
    flex: 1;
    height: 56rpx;
    padding: 0 10rpx;
}

.v-search-form_circle {
    border-radius: 14px;
}

.v-search-form_primary {
    border-radius: 8rpx;
}

.v-search-form_icon_in-box {
    margin: 7rpx 14rpx;
    box-sizing: border-box;
}

.v-search-form_input {
    flex: 1;
}

.v-input-icon {
    flex: 0.1;
    text-align: center;
    /* padding: 10rpx; */
}

.v-search-bar_confirm {
    flex: 0.2;
    text-align: center;
}

.v-search-bar_cancel {
    flex: 0.2;
    text-align: center;
}