/* components/v-uploader/v-uploader.wxss */

.v-uploader {
    background: rgba(255, 255, 255, 1);
    width: 100%;
}

.v-uploader_title {
    height: 44rpx;
    font-size: 16px;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    line-height: 44rpx;
    padding-top: 40rpx;
    padding-left: 20rpx;
    flex: 0.3
}

.v-uploader_files {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 30rpx 12rpx;
    flex-wrap: wrap;
    flex: 1;
}

.v-uploader_file {
    width: 220rpx;
    height: 220rpx;
    margin-right: 22rpx;
    margin-bottom: 16rpx;
    position: relative;
}

.v-uploader_file__has-delete {
    /* margin-right: 32rpx; */
}

.v-uploader_file__img {
    display: block;
    width: inherit;
    height: inherit;
}

.v-uploader_file__delete_container {
    display: flex;
    justify-content: flex-start;
    position: absolute;
    top: -15rpx;
    right: -40rpx;
    width: 60rpx;
    height: 60rpx;
    z-index: 500;
}

.v-uploader_file__delete_icon {
    width: 30rpx;
    height: 30rpx;
}

.v-uploader__input-box {
    float: left;
    position: relative;
    margin-right: 8px;
    margin-bottom: 8px;
    width: 220rpx;
    height: 220rpx;
    box-sizing: border-box;
    background-color: #ededed
}

.v-uploader__input-box:after,
.v-uploader__input-box:before {
    content: " ";
    position: absolute;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #a3a3a3
}

.v-uploader__input-box:before {
    width: 2px;
    height: 32px
}

.v-uploader__input-box:after {
    width: 32px;
    height: 2px
}

.v-uploader__input-box:active {
    border-color: #8b8b8b
}

.v-uploader__input-box:active:after,
.v-uploader__input-box:active:before {
    background-color: #8b8b8b
}

.v-uploader__input {
    position: absolute;
    z-index: 1;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0
}